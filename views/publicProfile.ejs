<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>PixelPulse - <%= user.username %> Profile</title>
    <style>
        /* Custom styles for the publicProfile page */
        .profile-section {
            padding-top: 50px;
            padding-bottom: 50px;
        }

        .profile-picture-container {
            width: 150px;
            height: 150px;
            overflow: hidden;
            border-radius: 50%;
        }

        .profile-picture {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .project-card {
            height: 100%;
        }

        .project-image {
            height: 200px;
            object-fit: cover;
            object-position: center;
        }

        .project-description {
            max-height: 75px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <!-- Navigation bar -->
    <%- include('partials/navbar') %>

    <!-- Main content -->
    <main class="profile-section">
        <div class="container">
            <!-- User profile section -->
            <div class="user-info d-flex align-items-center justify-content-center mb-4">
                <div class="profile-picture-container">
                    <img src="/<%= user.profile_picture || 'default_profile_image.jpg' %>" alt="<%= user.username %>'s profile picture" class="profile-picture">
                </div>
                <div class="user-details ml-4">
                    <h1><%= user.username %></h1>
                    <p>Member since: <%= new Date(user.created_at).toLocaleDateString() %></p>
                    <p>Role: <%= user.role %></p>
                </div>
            </div>

            <!-- Projects section -->
     <!-- Projects section -->
<h2 class="mb-4">Projects Gallery</h2>
<div class="row">
    <% user.projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
            <div class="project-card rounded shadow-sm">
                <img src="/<%= project.project_picture || '/images/default_project_image.jpg' %>" alt="<%= project.title %>" class="img-fluid project-image">
                <div class="p-3">
                    <h4><%= project.title %></h4>
                    <p class="project-description"><%= project.description.substring(0, 200) + (project.description.length > 250 ? "..." : "") %></p>
                    <a href="/project/<%= project.id %>" class="btn btn-primary">See More</a>
                    <p>Likes: <%= project.likes || 0 %></p>
                </div>
            </div>
        </div>
    <% }); %>
</div>

        </div>
    </main>

    <!-- Footer section -->
    <footer>
        <%- include('partials/footer') %>
    </footer>

    <!-- JavaScript scripts -->
    <!-- Add any necessary JavaScript scripts here -->
</body>
</html>
